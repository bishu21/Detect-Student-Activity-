<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bishwendra.note_student_activity.StudentPage"
    android:id="@+id/student">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student is login ......"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/Tvusername"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logout"
        android:onClick="onClick_logout"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TeacherList"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/scrollView"
        android:layout_below="@+id/Headerlist"
        android:layout_alignParentBottom="true"
        android:choiceMode="singleChoice"
        android:headerDividersEnabled="true"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/TeacherList" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Headerlist"
        android:layout_below="@+id/Tvusername"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_marginTop="50dp"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/scrollView" />


</RelativeLayout>
